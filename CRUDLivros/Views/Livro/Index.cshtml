@model List<LivroModel>

@{
    ViewData["Title"] = "Página de Livros";
}

<p class="text-left">
    <h1 class="display-4">Livros</h1>
     <a class="btn btn-success "role="button" asp-controller="Livro" asp-action="AdicionarLivro">Adicionar Livro</a>
</p>


    
<table class="table">
  <thead>
    <tr>
      <th scope="col">Código do livro</th>
      <th scope="col">Nome do autor</th>
      <th scope="col">Titulo</th>
      <th scope="col">Data</th>
      <th scope="col">Editora</th>
      <th scope="col">Nome</th>
      <th scoped="col"></th>
    </tr>
  </thead>
  <tbody>
            @if(Model!=null && Model.Any())
            {
                foreach(LivroModel item in Model)
                {
<tr>
      <th scope="row">@item.Id</th>
      <td>@item.Autor.Nome</td>
      <td>@item.Titulo</td>
      <td>@item.DataPublicacao</td>
      <td>@item.Editora</td>

      <td>
   <div class="btn-group" role="group">
  <a role="button" class="btn btn-warning" asp-route-id="@item.Id" asp-controller="Livro" asp-action="EditarLivro">Editar</a>
  <a role="button" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Livro" asp-action="ExcluirLivro">Apagar</a>
</div>
      </td>
</tr>
                }
            }
        </tbody>
</table>
