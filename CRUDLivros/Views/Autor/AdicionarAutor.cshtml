@model AutorModel

@{
    ViewData["Title"] = "Adicionar novo autor";
}

<div class="text-center">

<h2 class="display-4">Cadastrar novo autor</h2>

</div>

<form asp-controller="Autor" asp-action="AddAutor" method="post">
  <div class="mb-3">
    <label for="nome" class="form-label">Nome</label>
    <input type="text" id="nome" asp-for="Nome" class="form-control" placeholder="Insira o nome do autor">
  </div>

  <button type="submit" class="btn btn-success">Confirmar</button>
  <a class="btn btn-secondary" asp-controller="Autor" asp-action="Index" role="button">Voltar</a>
</form>