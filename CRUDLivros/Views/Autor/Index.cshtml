@model List<AutorModel>
@{
    ViewData["Title"] = "Página de autores";
}

<h1 class="display-4 text-left">Autores</h1>
<p class="text-left">
    <a class="btn btn-success" role="button" asp-controller="Autor" asp-action="AdicionarAutor">Adicionar novo autor</a>
</p>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scoped="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AutorModel item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Nome</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-warning" asp-controller="Autor" asp-route-id="@item.Id" asp-action="EditarAutor">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Autor" asp-action="ExcluirAutor">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>